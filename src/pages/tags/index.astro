---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts = Object.values(import.meta.glob('../blog/**/*.md', { eager: true }));


const tags = [...new Set(
  allPosts.map((post: any) => post.frontmatter.tags)
    .flat())];
---
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

<BaseLayout pageTitle="タグ検索">
  <h2>タグを選んで記事を検索できます。</h2>
  <div class="tags">
    {tags.map((tag) => (
    <p><a href={`/site/tags/${tag}`} class="tag">{tag}</a></p>
    ))}
  </div>
</BaseLayout>